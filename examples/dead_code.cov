-- Demonstrates Phase 4: Contract verification
-- Expected: V002 (dead code after return)

intent: "Test dead code detection and return analysis"
scope: test.verify
risk: low

contract early_return(n: Int) -> Int
  precondition:
    n >= 0

  postcondition:
    result >= 0

  effects:
    reads [n]
    touches_nothing_else

  body:
    if n <= 1:
      return n
    result = n * 2
    return result
    x = result + 1
    return x
